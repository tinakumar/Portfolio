<h1>New project</h1>

<%= form_for(@project) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
   <div class="field">
    <%= f.label :technologies_used %><br />
    <%= f.text_field :technologies_used %>
  </div>
  <div class="actions">New Project
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', projects_path %>
