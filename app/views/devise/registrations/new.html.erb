<br>
<h2 style="text-align: center;">Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <div style="text-align: center;"><%= f.label :email %><br />

  <%= f.email_field :email, :autofocus => true %></div>
  <br>
  <% if f.object.password_required? %>
  <div class="field" style="text-align: center;"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <% end %>
  <br>
  <div style="text-align: center;"><%= f.submit "Register" %></div>
  <% end %>
  <br>
<h4 style="text-align: center;"><%= render "devise/shared/links" %></h4>
</form>
